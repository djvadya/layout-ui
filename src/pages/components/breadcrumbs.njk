{% from "components/general/breadcrumbs/breadcrumbs.njk" import render as breadcrumbsComponent %}

{% set meta = {
    title: "Breadcrumbs",
    sidebar: "components"
} %}
{% set breadcrumbs = {
    items: [
        { title: "Home", url: "../home.html" },
        { title: "Components", url: "../components.html" },
        { title: "Breadcrumbs" }
    ]
} %}
{% set title = {
    text: "Breadcrumbs",
    tag: "h1",
    class: "title"
} %}
{% extends "layouts/grid.njk" %}
{% block content %}

    {# Variants #}
    <section class="example section">
        <h2>Variants</h2>
        <div class="block">
            {{ breadcrumbsComponent(items=[
                {title: "Home", url: "/"},
                {title: "Category", url: "/category"},
                {title: "Current page"}
            ], separator="chevron") }}

            {{ breadcrumbsComponent(items=[
                {title: "Home", url: "/"},
                {title: "Category", url: "/category"},
                {title: "Current page"}
            ], separator="slash") }}

            {{ breadcrumbsComponent(items=[
                {title: "Home", url: "/"},
                {title: "Category", url: "/category"},
                {title: "Current page"}
            ], separator="dot") }}

            {{ breadcrumbsComponent(items=[
                {title: "Home", url: "/"},
                {title: "Category", url: "/category"},
                {title: "Current page"}
            ], separator="arrow") }}
        </div>
    </section>

    {# Sizes #}
    <section class="example section">
        <h2>Sizes</h2>

        <div class="block">
            {{ breadcrumbsComponent(items=[
                {title: "Home", url: "/"},
                {title: "Products", url: "/products"},
                {title: "Current Page"}
            ], size="sm") }}

            {{ breadcrumbsComponent(items=[
                {title: "Home", url: "/"},
                {title: "Products", url: "/products"},
                {title: "Current Page"}
            ], size="md") }}

            {{ breadcrumbsComponent(items=[
                {title: "Home", url: "/"},
                {title: "Products", url: "/products"},
                {title: "Current Page"}
            ], size="lg") }}
        </div>
    </section>

    {# Usage #}
    <section class="section">
        <h2>Usage</h2>

        {% set code = {
            title: "Import and Basic Usage",
            language: "njk",
            content: '{% from "components/general/breadcrumbs/breadcrumbs.njk" import render as breadcrumbs %}

{# Simple breadcrumbs #}
{{ breadcrumbs(items=[
    {title: "Home", url: "/"},
    {title: "Category", url: "/category"},
    {title: "Current Page"}
]) }}

{# Breadcrumbs with options #}
{{ breadcrumbs(
    items=[
        {title: "Home", url: "/"},
        {title: "Category", url: "/category"},
        {title: "Current Page"}
    ],
    separator="slash",
    size="lg"
) }}'
        } %}
        {% include "components/general/code/code.njk" %}

        {% set code = {
            title: "All Available Parameters",
            language: "njk",
            content: '{{ breadcrumbs(
    items=[
        {title: "Home", url: "/"},
        {title: "Category", url: "/category"},
        {title: "Current Page"}
    ],
    separator="chevron|slash|dot|arrow",
    size="sm|md|lg",
    class="custom-class",
    ariaLabel="Breadcrumb navigation"
) }}'
        } %}
        {% include "components/general/code/code.njk" %}
    </section>

    {# Note #}
    <section class="section">
        <h2>Note</h2>

        <div class="text">
            <p>The breadcrumbs component includes valid Schema.org BreadcrumbList microdata for better SEO:</p>
            <ul>
                <li>itemtype="https://schema.org/BreadcrumbList" on the list</li>
                <li>itemtype="https://schema.org/ListItem" on each item</li>
                <li>itemprop="item" on links</li>
                <li>itemprop="name" on titles</li>
                <li>itemprop="position" for item order</li>
                <li>aria-current="page" on the current page</li>
            </ul>
        </div>
    </section>
{% endblock %}
