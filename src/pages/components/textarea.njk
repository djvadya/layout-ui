{% from "components/general/textarea/textarea.njk" import render as textarea %}

{% set meta = {
    title: "Textarea",
    sidebar: "components"
} %}
{% set breadcrumbs = {
    items: [
        { title: "Home", url: "../home.html" },
        { title: "Components", url: "../components.html" },
        { title: "Textarea" }
    ]
} %}
{% set title = {
    text: "Textarea",
    tag: "h1",
    class: "title"
} %}
{% extends "layouts/grid.njk" %}
{% block content %}

    {# Sizes #}
    <section class="example section">
        <h2>Textarea Sizes</h2>

        <div class="block">
            {{ textarea(placeholder="Small textarea...", size="sm", rows=3) }}
            {{ textarea(placeholder="Medium textarea (default)...", size="md", rows=4) }}
            {{ textarea(placeholder="Large textarea...", size="lg", rows=5) }}
        </div>
    </section>

    {# States #}
    <section class="example section">
        <h2>Textarea States</h2>

        <div class="block">
            {{ textarea(placeholder="Default textarea...", rows=4) }}
            {{ textarea(value="Disabled textarea - cannot be edited", disabled=true, rows=4) }}
            {{ textarea(value="Readonly textarea - cannot be edited", readonly=true, rows=4) }}
            {{ textarea(placeholder="Error state textarea...", error=true, rows=4) }}
        </div>
    </section>

    {# Different Rows #}
    <section class="example section">
        <h2>Different Row Heights</h2>

        <div class="block">
            {{ textarea(placeholder="3 rows...", rows=3) }}
            {{ textarea(placeholder="6 rows...", rows=6) }}
            {{ textarea(placeholder="10 rows...", rows=10) }}
        </div>
    </section>

    {# Usage #}
    <section class="section">
        <h2>Usage</h2>

        {% set code = {
            title: "Import and Basic Usage",
            language: "njk",
            content: '{% from "components/general/textarea/textarea.njk" import render as textarea %}

{# Simple textarea #}
{{ textarea(name="message", placeholder="Enter your message...") }}

{# Textarea with options #}
{{ textarea(
    name="description",
    placeholder="Enter description...",
    size="lg",
    rows=6
) }}'
        } %}
        {% include "components/general/code/code.njk" %}

        {% set code = {
            title: "All Available Parameters",
            language: "njk",
            content: '{{ textarea(
    name="message",
    placeholder="Enter your message...",
    size="sm|md|lg",
    rows=4,
    value="Default value",
    disabled=true,
    readonly=true,
    required=true,
    error=true,
    maxlength=500,
    id="textarea-id",
    class="additional-classes",
    data={validate: "true", target: "#form"},
    aria={label: "Message input", describedby: "message-help"}
) }}'
        } %}
        {% include "components/general/code/code.njk" %}
    </section>
{% endblock %}
