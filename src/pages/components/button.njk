{% from "components/general/button/button.njk" import render as button %}

{% set meta = {
    title: "Button",
    sidebar: "components"
} %}
{% set breadcrumbs = {
    items: [
        { title: "Home", url: "../home.html" },
        { title: "Components", url: "../components.html" },
        { title: "Button" }
    ]
} %}
{% set title = {
    text: "Button",
    tag: "h1",
    class: "title"
} %}
{% extends "layouts/grid.njk" %}
{% block content %}

    {# Variants #}
    <section class="example section">
        <h2 class="title">Button Variants</h2>
        <div class="row">
            {{ button(text="Primary", variant="primary") }}
            {{ button(text="Secondary", variant="secondary") }}
            {{ button(text="Outline", variant="outline") }}
            {{ button(text="Dashed", variant="dashed") }}
            {{ button(text="Ghost", variant="ghost") }}
        </div>
    </section>

    {# Sizes #}
    <section class="example section">
        <h2>Button Sizes</h2>

        <div class="row">
            {{ button(text="Small", variant="primary", size="sm") }}
            {{ button(text="Medium", variant="primary", size="md") }}
            {{ button(text="Large", variant="primary", size="lg") }}
        </div>
    </section>

    {# Shapes #}
    <section class="example section">
        <h2>Button Shapes</h2>

        <div class="row">
            {{ button(text="Default", variant="primary", shape="default") }}
            {{ button(text="Rounded", variant="primary", shape="rounded") }}
        </div>
    </section>

    {# Disabled State #}
    <section class="example section">
        <h2>Disabled State</h2>

        <div class="row">
            {{ button(text="Disabled Primary", variant="primary", disabled=true) }}
            {{ button(text="Disabled Secondary", variant="secondary", disabled=true) }}
            {{ button(text="Disabled Outline", variant="outline", disabled=true) }}
            {{ button(text="Disabled Dashed", variant="dashed", disabled=true) }}
            {{ button(text="Disabled Ghost", variant="ghost", disabled=true) }}
        </div>
    </section>

    {# Button as Link #}
    <section class="example section">
        <h2>Button as Link</h2>

        <div class="row">
            {{ button(text="Link Button", variant="primary", type="link", href="#") }}
            {{ button(text="External Link", variant="secondary", type="link", href="https://example.com", target="_blank", rel="noopener noreferrer") }}
        </div>
    </section>

    {# Link #}
    <section class="example section">
        <h2>Link</h2>

        <div class="row">
            {{ button(text="Link", variant="link", type="link", href="#") }}
            {{ button(text="Link", variant="link", type="link", href="#", underline="solid") }}
            {{ button(text="Link", variant="link", type="link", href="#", underline="dashed") }}
        </div>
    </section>

    {# Usage #}
    <section class="section">
        <h2>Usage</h2>

        {% set code = {
            title: "Import and Basic Usage",
            language: "njk",
            content: '{% from "components/general/button/button.njk" import render as button %}

{# Simple button #}
{{ button(text="Click me") }}

{# Button with options #}
{{ button(
    text="Submit Form",
    variant="primary",
    size="lg",
    type="submit"
) }}'
        } %}
        {% include "components/general/code/code.njk" %}

        {% set code = {
            title: "All Available Parameters",
            language: "njk",
            content: '{{ button(
    text="Click me",
    variant="primary|secondary|outline|dashed|ghost|link",
    size="sm|md|lg",
    shape="default|rounded",
    type="button|submit|reset|link",
    href="#",
    target="_blank",
    rel="noopener noreferrer",
    disabled=true,
    underline="solid|dashed",
    id="button-id",
    name="button-name",
    value="button-value",
    class="additional-classes",
    data={toggle: "modal", target: "#myModal"},
    aria={label: "Close dialog", expanded: "false"}
) }}'
        } %}
        {% include "components/general/code/code.njk" %}
    </section>

    {# Note #}
    <section class="section">
        <h2>Note</h2>

        <div class="text">
            <ul>
                <li>variant "link" creates a text link without button appearance</li>
                <li>type "link" creates a button-styled &lt;a&gt; element</li>
            </ul>
        </div>
    </section>
{% endblock %}
